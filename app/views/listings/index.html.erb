<h1>Listing Listings!</h1>
<% if signed_in?%>
<h3> Welcome, <%=current_user.email %>!</h3>
<% else %>
<h3> Welcome, guest! </h3>
<% end %>

 
<table>
  <tr>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @listings.each do |listing| %>
  <tr>
    <td><%= listing.description %></td>
    <td><%= link_to "Show", listing_path(listing) %></td>
    <% if listing.user != current_user %>
    <td><%= link_to "Book", new_listing_reservation_path(listing) %></td>
    <% end %>

    <% if listing.user == current_user %>
    <td><%= link_to "Edit",  edit_listing_path(listing) %></td>
    <td><%= link_to "Remove", listing_path(listing), method: :delete, 'data-no-turbolink' => true %></td>     
    <% end %>
  </tr>
<% end %>
</table>
 
