<h1>Edit Your Profile</h1>

 <%= form_for @user, :html => {:multipart => true} do |form| %>
<div class="text-field">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email' %>
</div>

 <div class="form-group">
 	<%= form.file_field :image %>
 </div>

 <div class="submit-field">
    <%= form.submit %>
 </div>

 <% end %>
